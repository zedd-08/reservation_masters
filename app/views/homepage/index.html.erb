<div class="w-100 d-flex flex-column align-items-center">
  <% if notice.present? %>
    <p class="py-2 px-3 note note-success text-green-500 font-medium rounded-lg inline-block " id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "We have #{pluralize(@count, 'stay')} waiting for you!" %>

  <div class="d-flex justify-between items-center pb-8">
    <h2 class="mx-auto font-bold text-4xl">We have <%= pluralize(@count, 'stay') %> waiting for you!</h2>
  </div>

  <div class="mx-auto md:w-2/3 w-100 d-flex justify-content-around">
    <%= link_to "Browse all stays", :stays, class: "btn btn-success" %>
  </div>

  <%= form_with url: :stays, method: :get do |form| %>
  <div class="d-flex justify-content-around align-items-center pb-8" style="gap: 25px">
    <div class="my-5">
      <%= form.label :check_in, class: "form-label"%>
      <%= form.date_field :check_in, min: Date.today, class: "form-control" %>
    </div>

    <div class="my-5">
      <%= form.label :check_out, class: "form-label" %>
      <%= form.date_field :check_out, min: Date.tomorrow, class:"form-control" %>
    </div>
    <div class="d-flex justify-content-around my-5">
      <%= form.submit "Search for available stays", class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center pb-8">
    <h2 class="mx-auto font-bold text-2xl"> Search for your reservations: </h2>
  </div>

  <%= form_with url: :reservations, method: :get do |form| %>
  <div class="d-flex justify-content-around align-items-center pb-8" style="gap: 50px">
    <div class="my-5">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="d-flex justify-content-around my-5">
      <%= form.submit "Search for your reservations", class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>
</div>
