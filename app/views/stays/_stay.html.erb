<div id="<%= dom_id stay %>">
  <h1 class="text-xl font-bold mb-3"> <%= stay.name %> </h1>

  <p class="my-5">
    <%= image_tag stay.image_url %>
  </p>

  <p class="my-5">
    <i class="font-medium mb-1"><%= stay.address %></i>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= stay.description %>
  </p>

  <p class="my-5">
    <b class="font-medium mb-1">Max persons: </b>
    <%= stay.max_persons %>
  </p>

  <p class="my-5">
    <b class="font-medium mb-1">Pet friendly: </b>
    <%= stay.pet_friendly ? "Yes" : "No" %>
  </p>

  <p class="my-5">
    <b class="font-medium mb-1">Bedrooms: </b>
    <%= stay.bedrooms %>
  </p>

  <p class="my-5">
    <b class="font-medium mb-1">Bathrooms: </b>
    <%= stay.bathrooms %>
  </p>

  <p class="my-5">
    <b class="font-medium mb-1">Area: </b>
    <%= stay.area %>
  </p>

  <p class="my-5">
    <strong class="font-medium mb-1">Price per night:</strong>
    <%= number_to_currency(stay.price, :unit => "â‚¬", :separator => ",", :delimiter => ".") %>
  </p>

</div>
