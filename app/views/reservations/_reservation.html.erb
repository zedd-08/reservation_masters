<div id="<%= dom_id reservation %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Stay:</strong>
    <%= reservation.stay_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Check in:</strong>
    <%= reservation.check_in %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Check out:</strong>
    <%= reservation.check_out %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= reservation.status %>
  </p>

</div>
