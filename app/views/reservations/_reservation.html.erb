<div id="<%= dom_id reservation %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Stay:</strong>
    <%= @stay.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= reservation.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= reservation.address %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= reservation.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Check in:</strong>
    <%= reservation.check_in %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Check out:</strong>
    <%= reservation.check_out %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Amount:</strong>
    <%= reservation.total_amount %>
  </p>

</div>
