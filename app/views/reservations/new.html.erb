<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-3xl">Reserving the stay: <%= @stay.name %> </h1>
  <%= render "form", reservation: @reservation %>
  <%= render partial: 'stay', locals: { stay: @stay } %>
  <div class="d-flex justify-content-around gap-10" style="width: 100%">
    <%= link_to "Back to all stays", stays_path(check_in: params[:check_in], check_out: params[:check_out]), class: "btn btn-secondary" %>
  </div>
</div>
